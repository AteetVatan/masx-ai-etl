# =============================================================================
# MASX AI ETL Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=change_this_in_production
API_RELOAD=false

# RunPod Worker Configuration
RUNPOD_WORKERS=4
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT=https://api.runpod.io/v2/your_endpoint_id/run

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# ETL API Key (required for protected endpoints)
ETL_API_KEY=your_etl_api_key_here

# Require API key for all endpoints
REQUIRE_API_KEY=false

# =============================================================================
# DATABASE CONFIGURATION (SUPABASE)
# =============================================================================

# Supabase Project Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anonymous_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_DB_PASSWORD=your_supabase_database_password
SUPABASE_DB_URL=your_supabase_database_url

# Database Connection Pool
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1

# =============================================================================
# GDELT API CONFIGURATION
# =============================================================================

# GDELT API Settings
GDELT_API_KEY=your_gdelt_api_key
GDELT_API_URL=https://api.gdeltproject.org/v2/search/gkg
GDELT_API_KEYWORDS=ai,technology,innovation
GDELT_MAX_RECORDS=100

# =============================================================================
# PROXY CONFIGURATION
# =============================================================================

# Proxy Settings
PROXY_WEBPAGE=https://free-proxy-list.net/
PROXY_TESTING_URL=https://httpbin.org/ip
MAX_WORKERS=20

# =============================================================================
# CHROMA VECTOR DATABASE
# =============================================================================

# Chroma Storage Directories
CHROMA_DEV_PERSIST_DIR=./.chroma_storage
CHROMA_PROD_PERSIST_DIR=/mnt/data/chroma

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Request Handling
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=7200
RETRY_ATTEMPTS=3
RETRY_DELAY=2

# GPU and Processing Timeouts (for long-running ETL processes)
GPU_TIMEOUT=7200
RENDER_TIMEOUT_S=3600

# Memory and Caching
CACHE_TTL=3600
MAX_MEMORY_USAGE=0.8

# =============================================================================
# SECURITY & CORS
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Content Filtering
ENABLE_CONTENT_FILTERING=true
MAX_CONTENT_LENGTH=10000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=logs/masx.log
LOG_ROTATION=daily
LOG_RETENTION=30

# Metrics and Health Checks
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENDPOINT=/health

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SQL_LOGGING=false
ENABLE_API_DOCS=true

# Testing Configuration
TEST_DATABASE_URL=
MOCK_EXTERNAL_APIS=false
TEST_SUMMARIZER=HDBSCAN

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================

# Port for the application
PORT=8000

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Never commit .env files to version control
# 2. Use strong, unique API keys in production
# 3. Adjust memory and connection limits based on your infrastructure
# 4. Set appropriate CORS origins for production deployments
# 5. Use environment-specific .env files (.env.development, .env.production)
#
# =============================================================================
